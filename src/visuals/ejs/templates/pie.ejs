<!DOCTYPE html>
<html>

<head>
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <style>
    #container {
        padding: 0px;
        padding-top: 12px;   
    }
    .piechartheader {
        text-align: center;
        padding: 0px;
        margin: 0px;
        font-weight: bold;
    }
    </style>

</head>

<body>
    <div id="container">
        <p class="piechartheader"><%= title %></p>
        <div id="piechart"></div>
    </div>

    <script type="text/javascript">
        google.charts.load('current', { 'packages': ['corechart'] });
        google.charts.setOnLoadCallback(drawChart);

        function drawChart() {
            var pieData = google.visualization.arrayToDataTable([
                ['<%- sliceName %>', '<%- sliceValue %>'],
                <% sliceData.forEach(row=> { %>
                    ['<%= row.sliceName %>', <%= row.sliceValue %>],
                <% }); %>
            ]);

            var pieHole = <%- pieHole %>;
            var is3D = <%- is3D %>;

            var options = {
                'titlePosition': 'none',
                'pieSliceText': 'value-and-percentage',
                'pieSliceBorderColor': 'black',
                'fontSize': '<%- fontSize %>',
                'width': <%- width %>,
                'height': <%- height %>,
                'chartArea': <%- chartArea %>,
                'colors': [<% sliceData.forEach(row=> { %>
                    '<%= row.sliceColor %>',
                <% }); %>]
            };

            if (pieHole) options.pieHole = pieHole;
            if (is3D) options.is3D = is3D;

            var chart = new google
                .visualization
                .PieChart(document.getElementById('piechart'));
            chart.draw(pieData, options);
        }
    </script>

</body>
<html>