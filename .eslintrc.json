{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "airbnb-base"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "import/order": ["error", { "newlines-between": "always" }],
    "no-console": 2,
    "max-len": ["error", { "code": 80, "ignoreTemplateLiterals": true }]
  }
}
